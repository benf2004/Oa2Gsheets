{
  "manifest_version": 3,
  "name": "OA2Gsheets",
  "description": "Sends profit info from Amazon webpage to Google Sheets.",
  "version": "0.3",
  "action": {
    "default_popup": "popup3.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/dp/*"
      ],
      "run_at": "document_idle",
      "js": [
        "AMZscript.js"
      ]
    }
  ],
  "icons": {
    "16": "16x16.png",
    "32": "32x32.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*.oa2gsheets.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["amz.html"],
      "matches": ["https://www.amazon.com/*"]
    }
 ],
  "permissions": [
    "cookies",
    "storage",
    "activeTab"
  ]
}